<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.ProcessOut" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/work_sans_regular</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Fixed -->

    <style name="TextAppearance.ProcessOut.Fixed" />

    <style name="TextAppearance.ProcessOut.Fixed.Caption">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Fixed.Tag">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Fixed.Button">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Fixed.Tabular">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Fixed.Body">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Fixed.Body.Compact">
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Fixed.Label">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Fixed.Label.Heading">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <!-- Medium -->

    <style name="TextAppearance.ProcessOut.Medium">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <style name="TextAppearance.ProcessOut.Medium.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Medium.Title">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Medium.Headline">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="TextAppearance.ProcessOut.Medium.Display">
        <item name="android:textSize">36sp</item>
        <item name="lineHeight">44sp</item>
    </style>

</resources>
