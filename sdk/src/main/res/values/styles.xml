<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.ProcessOut.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.ProcessOut.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Medium.Title</item>
    </style>

    <style name="Widget.ProcessOut.Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Medium.Subtitle</item>
    </style>

    <style name="Widget.ProcessOut.Input.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Fixed.Label.Heading</item>
    </style>

    <style name="Widget.ProcessOut.Input.ErrorMessage" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/poTextError</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Fixed.Label</item>
    </style>

    <style name="Widget.ProcessOut.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textColorHint">@color/poTextDisabled</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Fixed.Label</item>
        <item name="android:paddingLeft">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingStart">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/po_input_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/po_input_paddingVertical</item>
        <item name="android:textCursorDrawable">@drawable/po_text_cursor</item>
        <item name="android:textSelectHandle">@drawable/po_text_select_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/po_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/po_text_select_handle_right</item>
    </style>

    <style name="Widget.ProcessOut.CodeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:width">@dimen/po_codeEditText_width</item>
        <item name="android:height">@dimen/po_codeEditText_height</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Large.Title</item>
        <item name="android:textCursorDrawable">@drawable/po_text_cursor</item>
        <item name="android:textSelectHandle">@drawable/po_text_select_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/po_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/po_text_select_handle_right</item>
    </style>

    <style name="Widget.ProcessOut.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">@dimen/po_cornerRadius</item>
        <item name="android:padding">@dimen/po_button_padding</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">@dimen/po_button_insetVertical</item>
        <item name="android:insetBottom">@dimen/po_button_insetVertical</item>
        <item name="android:insetLeft">@dimen/po_button_insetHorizontal</item>
        <item name="android:insetRight">@dimen/po_button_insetHorizontal</item>
    </style>

    <style name="Widget.ProcessOut.Button.Primary">
        <item name="backgroundTint">@color/po_button_primary_background_states</item>
        <item name="android:textColor">@color/po_button_primary_text_states</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.ProcessOut.Button.Secondary">
        <item name="backgroundTint">@color/po_button_secondary_background_states</item>
        <item name="android:textColor">@color/po_button_secondary_text_states</item>
        <item name="strokeColor">@color/po_button_secondary_border_states</item>
        <item name="strokeWidth">@dimen/po_borderWidth</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.ProcessOut.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">@dimen/po_radioButton_minHeight</item>
        <item name="android:paddingLeft">@dimen/po_radioButton_paddingLeft</item>
        <item name="buttonTint">@color/po_radio_button_states</item>
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Fixed.Label</item>
    </style>

    <style name="Widget.ProcessOut.ExposedDropdown.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/po_cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/po_cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/po_cornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/po_cornerRadius</item>
        <item name="endIconDrawable">@drawable/po_dropdown_icon_states</item>
        <item name="endIconTint">@color/poTextPrimary</item>
    </style>

    <style name="Widget.ProcessOut.ExposedDropdown.Item" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Fixed.Label</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingStart">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/po_dropdown_item_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/po_dropdown_item_paddingVertical</item>
    </style>

</resources>
