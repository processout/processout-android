<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.ProcessOut.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textColorHint">@color/poTextDisabled</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Input.String</item>
        <item name="android:paddingLeft">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingStart">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/po_input_paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/po_input_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/po_input_paddingVertical</item>
    </style>

    <style name="Widget.ProcessOut.CodeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:width">@dimen/po_codeEditText_width</item>
        <item name="android:height">@dimen/po_codeEditText_height</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Title.Large</item>
    </style>

    <style name="Widget.ProcessOut.Input.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/poTextPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Input.Label</item>
    </style>

    <style name="Widget.ProcessOut.Input.ErrorMessage" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/poTextError</item>
        <item name="android:textAppearance">@style/TextAppearance.ProcessOut.Body.Small.Medium</item>
    </style>

    <style name="Widget.ProcessOut.Button" parent="Widget.MaterialComponents.Button">
        <item name="maxLines">1</item>
        <item name="cornerRadius">@dimen/po_cornerRadius</item>
        <item name="android:padding">@dimen/po_button_padding</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="backgroundTint">@color/po_submit_button_states</item>
    </style>

</resources>
